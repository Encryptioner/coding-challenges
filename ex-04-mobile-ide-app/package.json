{
  "name": "mobile-code-ide",
  "version": "1.0.0",
  "description": "Mobile-friendly IDE with VSCode extension compatibility for iOS and Android",
  "license": "MIT",
  "author": "Mobile IDE Team",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "clean": "theia clean && rimraf lib coverage .nyc_output",
    "build": "theia build --mode development",
    "build:prod": "NODE_ENV=production theia build --mode production && pnpm run copy:assets",
    "copy:assets": "cp -r public/* lib/",
    "start": "theia start --hostname 0.0.0.0 --port 3000",
    "start:prod": "NODE_ENV=production theia start --hostname 0.0.0.0 --port 3000",
    "watch": "theia build --watch --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm run lint && pnpm run typecheck && pnpm run test:ci",
    "cap:init": "cap init",
    "cap:sync": "cap sync",
    "cap:ios": "cap open ios",
    "cap:android": "cap open android",
    "build:mobile": "pnpm run build:prod && cap sync",
    "build:android": "bash scripts/build-android.sh",
    "build:ios": "bash scripts/build-ios.sh",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:fix": "pnpm audit --fix",
    "analyze:bundle": "source-map-explorer lib/**/*.js",
    "precommit": "pnpm run lint:fix && pnpm run format && pnpm run typecheck",
    "prepush": "pnpm run validate"
  },
  "dependencies": {
    "@theia/core": "^1.45.0",
    "@theia/editor": "^1.45.0",
    "@theia/editor-preview": "^1.45.0",
    "@theia/file-search": "^1.45.0",
    "@theia/filesystem": "^1.45.0",
    "@theia/git": "^1.45.0",
    "@theia/markers": "^1.45.0",
    "@theia/messages": "^1.45.0",
    "@theia/mini-browser": "^1.45.0",
    "@theia/monaco": "^1.45.0",
    "@theia/navigator": "^1.45.0",
    "@theia/outline-view": "^1.45.0",
    "@theia/output": "^1.45.0",
    "@theia/plugin-ext": "^1.45.0",
    "@theia/plugin-ext-vscode": "^1.45.0",
    "@theia/preferences": "^1.45.0",
    "@theia/process": "^1.45.0",
    "@theia/scm": "^1.45.0",
    "@theia/search-in-workspace": "^1.45.0",
    "@theia/terminal": "^1.45.0",
    "@theia/toolbar": "^1.45.0",
    "@theia/userstorage": "^1.45.0",
    "@theia/variable-resolver": "^1.45.0",
    "@theia/workspace": "^1.45.0",
    "mobile-ide-extension": "file:./extensions/mobile-ide",
    "mobile-git-extension": "file:./extensions/mobile-git",
    "mobile-runner-extension": "file:./extensions/mobile-runner"
  },
  "devDependencies": {
    "@theia/cli": "^1.45.0",
    "@capacitor/cli": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1",
    "@capacitor/android": "^5.5.1",
    "@capacitor/filesystem": "^5.1.4",
    "@capacitor/keyboard": "^5.0.6",
    "@capacitor/share": "^5.0.6",
    "@capacitor/app": "^5.0.6",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@use-gesture/react": "^10.3.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "source-map-explorer": "^2.5.3",
    "styled-components": "^6.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "theia": {
    "target": "browser",
    "frontend": {
      "config": {
        "applicationName": "Mobile Code IDE",
        "preferences": {
          "files.autoSave": "afterDelay",
          "editor.fontSize": 14,
          "editor.minimap.enabled": false,
          "workbench.list.smoothScrolling": true,
          "editor.smoothScrolling": true
        }
      }
    },
    "backend": {
      "config": {
        "startupTimeout": -1,
        "resolveSystemPlugins": false
      }
    }
  }
}
