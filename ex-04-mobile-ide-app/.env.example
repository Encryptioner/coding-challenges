# Mobile IDE Environment Configuration
# Copy this file to .env and configure for your environment

# Environment (development, staging, production)
NODE_ENV=production

# Application Configuration
APP_NAME=Mobile Code IDE
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=3000

# Build Configuration
BUILD_MODE=production
SOURCE_MAPS=false
MINIFY=true

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=false

# Security Configuration
ENABLE_CSP=true
ENABLE_RATE_LIMITING=true
MAX_FILE_SIZE_MB=50
MAX_WORKSPACE_SIZE_MB=500

# GitHub Integration (for PR reviews)
GITHUB_API_URL=https://api.github.com
GITHUB_TOKEN=
GITHUB_RATE_LIMIT_PER_HOUR=5000

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
ANALYTICS_ID=
ANALYTICS_ENABLED=true

# Performance
MAX_CONCURRENT_OPERATIONS=5
REQUEST_TIMEOUT_MS=30000
IDLE_TIMEOUT_MS=1800000

# Cache Configuration
ENABLE_SERVICE_WORKER=true
CACHE_MAX_AGE_SECONDS=3600
CACHE_MAX_SIZE_MB=100

# Mobile-Specific
KEYBOARD_AUTO_HIDE_DELAY_MS=5000
GESTURE_SENSITIVITY=medium
HAPTIC_FEEDBACK=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TO_FILE=false
LOG_FILE_PATH=/var/log/mobile-ide/app.log

# CORS Configuration (for web deployments)
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=*

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
AUTO_SAVE_INTERVAL_MS=30000

# Code Execution Limits (for security)
MAX_EXECUTION_TIME_MS=60000
MAX_OUTPUT_SIZE_KB=1024
ALLOWED_COMMANDS=npm,node,python,python3,java,javac,gcc,g++,make
